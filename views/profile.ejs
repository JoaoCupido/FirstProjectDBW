<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="/scss/style.css" />
    <link rel="shortcut icon" href="/img/favicon.ico"/>
    <title> Highlight </title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        window.history.pushState("", "", '/profile');
        // FONTE: https://stackoverflow.com/questions/39308798/change-url-where-to-render-view-with-express-4

        $(document).ready(function () {

            var socket = io();

            $("#join").click(function () {
                socket.emit("join","<%= userlogin %>");
                alert("You entered the chat!!");
            });

            $('#feed_form').submit(function () {
                socket.emit('chat message', $('#m').val());
                console.log($('#m').val());
                $('#m').val('');
                return false;
            });
            socket.on('chat message', function (msg) {
                $('#messages').append('<li style=background-color:#F5DEB3>' + (msg.id + ":" + msg.msg) + '</li>');
                window.scrollTo(0, document.body.scrollHeight);
            });

            socket.on('update', function (msg) {
                $('#messages').append('<li style="background-color:#000000;color:#FFFFFF">' + (msg) + '</li>');
                window.scrollTo(0, document.body.scrollHeight);
            });
        });
    </script>
</head>
<body>
